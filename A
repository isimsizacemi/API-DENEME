#include <SoftwareSerial.h>

SoftwareSerial mySerial(2, 3); // RX, TX

const int buttonPin = 4;
int buttonState = 0;

void setup() {
  mySerial.begin(9600);
  pinMode(buttonPin, INPUT);
}

void loop() {
  buttonState = digitalRead(buttonPin);
  if (buttonState == HIGH) {
    mySerial.println("1");
  } else {
    mySerial.println("0");
  }
  delay(100);
}
