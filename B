#pragma once

#include "quick.h"

void createQuickSort(QuickSort* q)
{
	q->pivot = 0;
}

void swapQuick(QuickSort* q, int num1, int num2)
{
	int temp = q->items[num1];
	q->items[num1] = q->items[num2];
	q->items[num2] = temp;
}

void partition(QuickSort* q , int *size , int *pivot)
{
	int j = 0;
	for (int i = (q->pivot ) ; i >= 0 ; i--) // pivota kadar  ADres konusdna hata var yoksa okey
	{
		int low = q->items[q->pivot - 1];

		if (q->items[q->pivot] < q->items[j])  // pivot küçükse yyer değiştir.
		{
			swapQuick(q, low, q->items[i + 1]);
			printf(" %d Swap -> %d \n\r", q->items[low], q->items[i]);
		}



		if (q->items[q->pivot] < q->items[i])  // pivot küçükse yyer değiştir.
		{
			swapQuick(q,q->pivot, q->items[i + 1]);
			printf(" %d Swap -> %d \n\r", q->items[q->pivot] , q->items[i]);
		}
	}
}

void partition(QuickSort* q, int* size, int* pivot)
{
	int j = 0;
	int low, high;
	for (int i = (q->pivot - 1); i >= 0; i--)
	{
		if (q->items[q->pivot] > q->items[i])
		{
			low = q->items[i];
		}
	}
}

void quickSort(QuickSort* q , int *size, int* retStatus)
{
	/*size = 10;*/ //sizeof da hata alıyorum size elimle 10 yazdım
	   // bir pivot recursive ile de pointer kullanarak sadece pivotu değişitirip yacağım.
	
	for (int i = 9; i >= 0; i--)
	{
		q->pivot = i;
		int myPivot = q->items[q->pivot ];
		
		partition(q , size , myPivot);
	}
}



